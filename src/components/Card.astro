---
import { Image } from "astro:assets";
interface Props {
    title: string;
    body: string;
    img: any;
}

const { title, body, img } = Astro.props;
---

<li class={`shadow mb-4 rounded flex flex-col w-72 h-[] bg-[#ffffff] border-gray-200 dark:bg-gray-900`}>
    <Image src={img} class="w-72 rounded-t" alt="title" />
    <section class="px-3 pb-3">
        <h2 class="text-3xl font-bold text-center mt-2">{title}</h2>
        <p class="mt-3 text-wrap">{body}</p>
    </section>
    <div class="mt-auto">
        <button class="bg-[#f9f9f9] dark:bg-gray-800 text-[#333333] dark:text-gray-300 w-full py-2 rounded-b dark:hover:bg-blue-900 transition rounded">Mas info</button>
    </div>
</li>
