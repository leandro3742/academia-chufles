---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Examen" url="exam">
    <iframe class="opacity-0" id="miIframe" src="https://preguntometro.vercel.app/iframe"></iframe>
</Layout>

<style>
    iframe {
        width: 100%;
        height: 80vh;
        border: none;
    }
</style>

<script>
    const iframe = document.getElementById("miIframe") as HTMLIFrameElement;
    iframe.onload = async function () {
        await iframe.contentWindow.postMessage({ backgroundColor: "#13151a", dark: true }, "https://preguntometro.vercel.app/iframe");
        iframe.classList.remove("opacity-0");
    };
</script>
